<h2 class="subheader">Create a New Account</h2>
<form name="myForm" class='accountForm' action="/account/create" method="post" id="newAccountForm">
    {{#if error}}
        <p class="errorMessage">{{error}}</p>
    {{/if}}
    <label for="newUsername">Username:</label>
    <input type="text" id="newUsername" name="newUsername">
    <label for="newPassword">Password:</label>
    <input type="password" id="newPassword" name="newPassword" />
    <button type="submit" id="createAccountBtn">Create!</button>
</form>

<button id="loginLink" class="littleLink">Already have an account? Log in!</button>
