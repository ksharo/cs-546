<h2 class="subheader">Create a New Account</h2>
<form name="createForm" class='accountForm' action="/account/create" method="post" id="newAccountForm">
    {{#if error}}
        <p class="errorMessage" id="createAccountError">{{errorMessage}} (status code: {{errorStatus}})</p>
    {{/if}}
    <p class="errorMessage" id="hiddenCreateAccountError" hidden></p>
    <label for="newFirstName">First Name:</label>
    <input type="text" id="newFirstName" name="newFirstName" value={{firstName}}>
    <label for="newLastName">Last Name:</label>
    <input type="text" id="newLastName" name="newLastName" value={{lastName}}>
    <label for="newEmail">Email (this will be your username):</label>
    <input type="email" id="newEmail" name="newEmail" value={{email}}>
    <label for="newScreenName">Screen Name:</label>
    <input type="text" id="newScreenName" name="newScreenName" value={{username}}>
    <label for="newPassword">Password:</label>
    <input type="password" id="newPassword" name="newPassword" autocomplete="on" />
    <label for="confirmNewPassword">Confirm Password:</label>
    <input type="password" id="confirmNewPassword" name="confirmNewPassword" autocomplete="on" />
    <button type="submit" id="createAccountBtn">Create!</button>
</form>

<button id="loginLink" class="littleLink">Already have an account? Log in!</button>