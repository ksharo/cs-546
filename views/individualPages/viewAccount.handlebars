<h2 class="subheader">Welcome Back, {{user.firstName}}!</h2>
<h3>Recommendations Just For You</h3>
<ul>
    {{#each recs}}
    <li><a href="http://localhost:3000/shows/view/{{this._id}}">{{this.name}}</a></li>
    {{/each}}
</ul>
<h3>Your Liked Shows</h3>
<ul>
    {{#each likes}}
    <li><a href="http://localhost:3000/shows/view/{{this._id}}">{{this.name}}</a></li>
    {{/each}}
</ul>
<h3>Shows You've Seen</h3>
<ul>
    {{#each watched}}
    <li><a href="http://localhost:3000/shows/view/{{this._id}}">{{this.name}}</a></li>
    {{/each}}
</ul>
<h3>Your Reviews</h3>
<ul>
    {{#each reviews}}
    <form>
    <li>
        <label for="review"><a href="http://localhost:3000/shows/view/{{this.showName._id}}">{{this.showName.name}}</a></label>: 
        <input type="text" id="review_{{this._id}}" name="review" value="{{this.content}}">
        <button id="{{this._id}}">Update</button>
        {{!-- <input type="submit" id="{{this._id}}" value="update" class="btn"> --}}
    </li>
    </form>
    {{/each}}
</ul>
