<h2 class="subheader">Welcome Back, {{user.firstName}}!</h2>
<hr/>
<h3 class="reviewHeader">Recommendations Just For You</h3>
<article class="cardLayout accountCard">
    <ul>
        {{#each recs}}
        <li><a class="searchLink" href="http://localhost:3000/shows/view/{{this._id}}"><img
                    alt="Image for {{this.name}}" class="thumbnail" src="{{this.image}}" /><span
                    class="showName">{{this.name}}</span></a>

            <aside class="searchImg">
                <h4>Details</h4>
                <p>{{this.start_year}} - {{this.end_year}}</p>
                <p>Likes: {{this.likes}}</p>
                <p>Dislikes: {{this.dislikes}}</p>
                <p>Watches: {{this.watches}}</p>
            </aside>
        </li>
        {{/each}}
    </ul>
</article>
<h3 class="reviewHeader">Your Liked Shows</h3>
<article class="cardLayout accountCard">
    <ul>
        {{#each likes}}
        <li><a class="searchLink" href="http://localhost:3000/shows/view/{{this._id}}">
                <img class="thumbnail" alt="Image for {{this.name}}" src="{{this.image}}" />
                <span class="showName">{{this.name}}</span></a>
            <aside class="searchImg">
                <h4>Details</h4>
                <p>{{this.start_year}} - {{this.end_year}}</p>
                <p>Likes: {{this.likes}}</p>
                <p>Dislikes: {{this.dislikes}}</p>
                <p>Watches: {{this.watches}}</p>
            </aside>
        </li>
        {{/each}}
    </ul>
</article>
<h3 class="reviewHeader">Shows You've Seen</h3>
<article class="cardLayout accountCard">
    <ul>
        {{#each watched}}
        <li><a class="searchLink" href="http://localhost:3000/shows/view/{{this._id}}"><img
                    alt="Image for {{this.name}}" class="thumbnail" src="{{this.image}}" />
                <span class="showName">{{this.name}}</span></a>
            <aside class="searchImg">
                <h4>Details</h4>
                <p>{{this.start_year}} - {{this.end_year}}</p>
                <p>Likes: {{this.likes}}</p>
                <p>Dislikes: {{this.dislikes}}</p>
                <p>Watches: {{this.watches}}</p>
            </aside>
        </li>
        {{/each}}
    </ul>
</article>
<h3 class="reviewHeader">Your Reviews</h3>
<article class="cardLayout accountCard reviewLayout">
    <ul>
        {{#each reviews}}
        <form class='reviewForm'>
            <label for="review"><a href="http://localhost:3000/shows/view/{{this.showName._id}}">Review for
                    {{this.showName.name}}:</a></label>
            <textarea id="review_{{this._id}}" name="review">{{this.content}}</textarea>
            {{#if this.anonymous}}
            <label for="anonymous">Anonymous:<input type="checkbox"
                    name="anonymous" checked id="anonymous_{{this._id}}"></input></label> {{else}}             
                    <label for="anonymous">Anonymous:<input type="checkbox"
                    name="anonymous" id="anonymous_{{this._id}}"></input></label>  
            {{/if}}
            <button id="updateReview_{{this._id}}" class="updateReviewBtn">Update</button>
        </form>
        <button id="deleteReview_{{this._id}}">Delete</button>
        {{/each}}
    </ul>
</article>